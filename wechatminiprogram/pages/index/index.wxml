<view class="container">
  <!-- 标题 -->
  <view class="title">健康监测与预警</view>
  
  <!-- 卡片容器 -->
  <view class="card">
    <!-- 第一行：心率和血氧 -->
    <view class="row">
      <view class="item">
        <text class="label">心率: </text>
        <text class="value">{{heartRate}}</text>
      </view>
      <view class="item">
        <text class="label">血氧: </text>
        <text class="value">{{spo2}}</text>
      </view>
    </view>
    
    <!-- 第二行：AX 和 GX -->
    <view class="row">
      <view class="item">
        <text class="label">AX: </text>
        <text class="value">{{ax}}</text>
      </view>
      <view class="item">
        <text class="label">GX: </text>
        <text class="value">{{gx}}</text>
      </view>
    </view>
    
    <!-- 第三行：AY 和 GY -->
    <view class="row">
      <view class="item">
        <text class="label">AY: </text>
        <text class="value">{{ay}}</text>
      </view>
      <view class="item">
        <text class="label">GY: </text>
        <text class="value">{{gy}}</text>
      </view>
    </view>
    
    <!-- 第四行：AZ 和 GZ -->
    <view class="row">
      <view class="item">
        <text class="label">AZ: </text>
        <text class="value">{{az}}</text>
      </view>
      <view class="item">
        <text class="label">GZ: </text>
        <text class="value">{{gz}}</text>
      </view>
    </view>
    
    <!-- 第五行：活动状态（高亮绿色） -->
    <view class="row row-last">
      <view class="item">
        <text class="label">状态: </text>
        <text class="value status-value">{{activityStatus}}</text>
      </view>
    </view>
  </view>
</view>

<!-- AI 部分 -->
<view class="ai-section">
  <view class="ai-input-container">
    <!-- 新增：模型选择下拉框 -->
    <picker bindchange="bindModelChange" range="{{['V3大模型', 'R1深度思考']}}" value="{{modelIndex}}">
    <view class="model-selected">{{modelSelected}} <icon type="arrowdown" size="20"></icon></view>
  </picker>
    <input class="ai-input" placeholder="给deepseek发送消息" value="{{question}}" bindinput="inputQuestion" />
    <button class="ai-button" bindtap="askAI">发送</button>
  </view>
  <!-- 思考提示 -->
  <view wx:if="{{isThinking}}" class="thinking-text">正在思考...</view>
  <!-- AI 回答 -->
  <view class="ai-answer">{{aiAnswer}}</view>
</view>