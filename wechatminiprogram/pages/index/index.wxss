/* AI 部分样式 */
.ai-section {
  margin-top: -10rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 输入框和按钮容器 */
.ai-input-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
}
/* 深度思考按钮样式 */
.model-button {
  width: 160rpx;
  height: 80rpx;
  background-color: #f0f0f0; /* 未启用时的背景色 */
  color: #666;
  font-size: 25rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 0rpx;
}

.model-button.active {
  background-color: #ff00bf57; /* 启用时的背景色 */
  color: #ffffff;
}

.ai-input {
  width: 1500rpx;  /* 自定义宽度，例如 500rpx */
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #ff00bf57;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-right: 0rpx;
}

/* 按钮样式 */
.ai-button {
  width: 120rpx;
  height: 80rpx;
  background-color: #ff00bf57;
  color: #ffffff;
  font-size: 25rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 回答样式 */
.ai-answer {
  font-size: 32rpx;
  color: #666;
  line-height: 1.5;
  word-wrap: break-word;
}
/* 思考提示样式 */
.thinking-text {
  font-size: 28rpx;
  color: #888888;
  text-align: center;
  margin: 20rpx 0;
}