/* 输入框样式 */
.ai-input {
  width: 1500rpx;  /* 自定义宽度，例如 500rpx */
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #ff00bf57;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

/* 按钮样式 */
.ai-button {
  width: 120rpx;
  height: 80rpx;
  background-color: #ff00bf57;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 回答样式 */
.ai-answer {
  font-size: 32rpx;
  color: #666;
  line-height: 1.5;
  word-wrap: break-word;
}
/* 思考提示样式 */
.thinking-text {
  font-size: 28rpx;
  color: #888888;
  text-align: center;
  margin: 20rpx 0;
}