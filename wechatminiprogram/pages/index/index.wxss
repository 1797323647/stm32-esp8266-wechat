/* 容器样式 */
.container {
  padding: 20rpx;
}

/* 标题样式 */
.title {
  text-align: center;          /* 居中 */
  font-size: 36rpx;            /* 字体大小 */
  font-weight: bold;           /* 加粗 */
  color: #ff00bf57;              /* 蓝色高亮 */
  margin-bottom: 20rpx;        /* 与卡片的间距 */
}

/* 卡片样式 */
.card {
  background-color: #ffffff;    /* 白色背景 */
  border-radius: 20rpx;        /* 圆角 */
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1); /* 阴影 */
  padding: 20rpx;              /* 内边距 */
  margin-top: 20rpx;           /* 与标题的间距 */
}

/* 每行样式 */
.row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 20rpx;
}

/* 第五行特殊样式 */
.row-last {
  justify-content: center;     /* 居中显示 */
}

/* 每个数据项样式 */
.item {
  font-size: 32rpx;
  margin-right: 80rpx;         /* 数据项间距 */
  min-width: 300rpx;  /* 固定宽度 */
  height: 50rpx;      /* 固定高度 */
  display: flex;
  align-items: center;
}

/* 去掉每行最后一个数据项的右侧间距 */
.row .item:last-child {
  margin-right: -120rpx;
}

/* 标签样式 */
.label {
  font-weight: bold;
  color: #ff00bf57;
  margin-right: 50rpx;         /* 标签与数值间距 */
  /* text-align: left;            显式左对齐 */
  min-width: 80rpx;   /* 固定标签宽度 */
}

/* 数值样式 */
.value {
  color: #666;
  flex: 1;
}

/* 状态高亮（绿色） */
.status-value {
  color: green;                /* 绿色字体 */
  font-weight: bold;           /* 加粗 */
}
.back {
  width: 200rpx;
  height: 65rpx;
  background-color: #ff00bf57; /* 粉色背景，与标题和 AI 按钮一致 */
  color: #ffffff;             /* 白色文字 */
  font-size: 26rpx;           /* 字体大小 */
  border-radius: 10rpx;       /* 圆角 */
  display: flex;
  align-items: center;
  justify-content: center;    /* 文字居中 */
  margin-left: 5rpx;
}
